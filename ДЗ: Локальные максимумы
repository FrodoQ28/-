using System;
using System.Collections.Concurrent;

namespace HW_localMax
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int[] array = new int[30];
            int firstIndex = 0;
            int nextOrPreviousIndex = 1;
            int maxRandom = 100;
            int minRandom = 0;
            string maxLocal = string.Empty;

            Random random = new Random();

            for (int i = 0; i < array.Length; i++)
            {
                array[i] = random.Next(minRandom, maxRandom);
            }

            for (int i = 0; i < array.Length; i++)
            {
                if (i > firstIndex && i + nextOrPreviousIndex < array.Length)
                {
                    if (array[i] > array[i - nextOrPreviousIndex] && array[i] > array[i + nextOrPreviousIndex])
                    {
                        maxLocal += Convert.ToString(array[i]) + " ";
                    }
                }
                
                else if (i == firstIndex)
                {
                    if (array[i] > array[i + nextOrPreviousIndex])
                    {
                        maxLocal += Convert.ToString(array[i]) + " ";
                    }
                }
                
                else if (i + nextOrPreviousIndex == array.Length)
                {
                    if (array[i] > array[i - nextOrPreviousIndex])
                    {
                        maxLocal += Convert.ToString(array[i]) + " ";
                    }
                }
            }

            Console.Write("Исходный массив: ");

            foreach (int i in array)
            {
                Console.Write(i + " ");
            }
           
            Console.WriteLine("\nЛокальные максимумы: " + maxLocal);
        }
    }
}



