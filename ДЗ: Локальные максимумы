using System;
using System.Collections.Concurrent;

namespace HW_localMax
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int[] array = new int[30];
            int lastIndex = array.Length - 1;
            int maxRandom = 100;
            int minRandom = 0;
            string maxLocal = string.Empty;

            Random random = new Random();

            for (int i = 0; i < array.Length; i++)
            {
                array[i] = random.Next(minRandom, maxRandom);
            }

            if (array[0] > array[1])
            {
                maxLocal += Convert.ToString(array[0]) + " ";
            }

            for (int i = 0; i < array.Length; i++)
            {
                if (i > 0 && i < lastIndex && array[i] > array[i - 1] && array[i] > array[i + 1])
                {
                    maxLocal += Convert.ToString(array[i]) + " ";
                }
            }

            if (array[lastIndex] > array[lastIndex - 1])
            {
                maxLocal += Convert.ToString(array[lastIndex]) + " ";
            }

            Console.Write("Исходный массив: ");

            foreach (int number in array)
            {
                Console.Write(number + " ");
            }

            Console.WriteLine("\nЛокальные максимумы: " + maxLocal);
        }
    }
}



