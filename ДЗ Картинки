using System;

namespace ДЗ_картинки
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int picturesInRow = 3;
            int userPictures = 52;
            int numberOfRowsWithPictures;
            int extraPictures;
            numberOfRowsWithPictures = userPictures / picturesInRow;
            extraPictures = userPictures % picturesInRow;
            Console.WriteLine($"Заполненых рядов - {numberOfRowsWithPictures}, Картинок сверх меры - {extraPictures}");
            Console.ReadKey();
        }
    }
}
