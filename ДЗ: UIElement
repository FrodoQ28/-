using System;

namespace HW_UIElement
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int health = 600;
            int maxHealth = 1000;
            int mana = 40;
            int maxMana = 100;

            Console.Write("Здоровье - ");
            DrawStatusBar(health, maxHealth, ConsoleColor.Green);

            Console.Write("\nМана - ");
            DrawStatusBar(mana, maxMana, ConsoleColor.Blue);
        }

        static void DrawStatusBar(int value, int maxValue, ConsoleColor color)
        {
            ConsoleColor defaultColor = Console.ForegroundColor;

            int iterationNumber = value;
            int barLenght = 10;
            int maxPercent = 100;
            int onePercent = maxValue / maxPercent;
            int fillPercent = value / onePercent / barLenght;

            char openBarSymbol = '[';
            char closeBarSymbol = ']';
            char fillSymbol = '#';
            char emptySymbol = '_';

            Console.Write(openBarSymbol);
            Console.ForegroundColor = color;
            Console.Write(FillStatusBar(fillPercent, fillSymbol));
            Console.ForegroundColor = defaultColor;
            Console.Write(FillStatusBar(barLenght, emptySymbol, fillPercent) + closeBarSymbol);
        }

        static string FillStatusBar(int lastIteration, char symbol, int iterationNumber = 0)
        {
            string statusBar = string.Empty;

            for (int i = iterationNumber; i < lastIteration; i++)
            {
                statusBar += symbol;
            }
            return statusBar;
        }
    }
}
