using System;

namespace HW_UIElement
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int health = 5;
            int maxHealth = 10;
            int mana = 7;
            int maxMana = 10;

            Console.Write("Здоровье - ");
            GetStatusBar(health, maxHealth, ConsoleColor.Green);

            Console.Write("\nМана - ");
            GetStatusBar(mana, maxMana, ConsoleColor.Blue);
        }

        static void GetStatusBar(int value, int maxValue, ConsoleColor color)
        {
            ConsoleColor defaultColor = Console.ForegroundColor;

            string statusBar = string.Empty;
            char openBarSymbol = '[';
            char closeBarSymbol = ']';
            char healthNumber = '#';
            char lostHealth = '_';

            for (int i = 0; i < value; i++)
            {
                statusBar += healthNumber;
            }

            Console.Write(openBarSymbol);
            Console.ForegroundColor = color;
            Console.Write(statusBar);
            Console.ForegroundColor = defaultColor;

            statusBar = string.Empty;

            for (int i = value; i < maxValue; i++)
            {
                statusBar += lostHealth;
            }

            Console.Write(statusBar + closeBarSymbol);
        }
    }
}
