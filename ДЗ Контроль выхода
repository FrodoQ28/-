using System;

namespace ДЗ_Контроль_выхода
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string closeProgram = "exit";
            string userInput = "0";
            
            while (closeProgram != userInput) 
            {
                Console.WriteLine($"Чтобы завершить работу программы введите {closeProgram}: ");
                userInput = Console.ReadLine();

            }
        }
    }
}
